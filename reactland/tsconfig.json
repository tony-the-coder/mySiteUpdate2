// reactland/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode: IMPORTANT for Vite and module resolution */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true, // UNCOMMENTED: Required for direct .ts/.tsx imports
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true, // REMOVED THIS LINE in the previous step - Ensure it's gone
    "jsx": "react-jsx",

    /* Path Aliases and ES Module Interoperability */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}