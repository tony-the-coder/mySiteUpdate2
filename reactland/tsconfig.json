// reactland/tsconfig.node.json
{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    // "noEmit": true, // REMOVED: This is the source of TS6310, and indirectly TS6306
    "declaration": false, // ADDED: Prevents generation of .d.ts files for vite.config.ts
    "declarationMap": false, // ADDED: Prevents generation of .d.ts.map files
    "types": ["node"]
  },
  "include": ["vite.config.ts"]
}