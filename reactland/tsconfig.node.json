// reactland/tsconfig.node.json
{
  "compilerOptions": {
    "composite": true, // Must be true for referenced projects
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    // "noEmit": true, // REMOVED THIS LINE - Fixes TS6310
    "declaration": false, // ADDED: Prevents generation of .d.ts files for vite.config.ts
    "declarationMap": false, // ADDED: Prevents generation of .d.ts.map files (good practice)
    "types": ["node"]
  },
  "include": ["vite.config.ts"]
}